<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Note Spirituelle</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f4f6f8;
      color: #333;
    }

    h3 {
      font-weight: 700;
    }

    .card {
      border: none;
      background: #ffffff;
      animation: fadeIn 0.6s ease;
    }

    .card-body p {
      font-size: 1.1rem;
      line-height: 1.7;
      margin-bottom: 1.2rem;
    }

    .card-body span {
      display: block;
      margin-top: 0.4rem;
      font-weight: 500;
      color: #212529;
    }

    .btn {
      font-weight: 600;
      padding: 0.6rem 1.4rem;
      font-size: 1rem;
    }

    #progress-bar {
      transition: width 0.4s ease-in-out;
      font-weight: bold;
    }

    hr {
      border-top: 1px solid #dee2e6;
      margin-top: 1rem;
      margin-bottom: 1.5rem;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 576px) {
      h3 {
        font-size: 1.5rem;
      }

      .btn {
        width: 100%;
        margin-bottom: 0.5rem;
      }

      .btn:last-child {
        margin-bottom: 0;
      }

      .text-center {
        display: flex;
        flex-direction: column;
        align-items: stretch;
      }
    }
  </style>
</head>
<body>

<div class="container py-5">
  <div class="card shadow-lg rounded-4">
    <div class="card-body p-5">
      <h3 class="text-center text-primary mb-4">üåø Note Spirituelle du Jour</h3>

      <div class="mb-4">
        <p><strong>üìñ Verset :</strong><span id="verset"><%- note.verset %></span></p>
        <hr>
        <p><strong>üôè Pri√®re :</strong><span id="priere"><%- note.pri√®re %></span></p>
        <hr>
        <p><strong>üí¨ Citation :</strong><span id="citation"><%- note.citation %></span></p>
        <hr>
        <p><strong>üìù Note :</strong><span id="note"><%- note.note %></span></p>
        <hr>
      </div>

      <div class="progress mb-4" style="height: 1.4rem;">
        <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 0%">0%</div>
      </div>

      <div class="text-center">
        <button id="prevBtn" class="btn btn-outline-secondary me-2">‚èÆÔ∏è Pr√©c√©dent</button>
        <button id="nextBtn" class="btn btn-primary">‚è≠Ô∏è Suivant</button>
      </div>
    </div>
  </div>
</div>

<script>
  let noteIndex = <%= JSON.stringify(noteIndex) %>;

  async function updateNote(direction) {
    let progress = 0;
    const progressBar = document.getElementById('progress-bar');
    progressBar.classList.add('progress-bar-animated');
    progressBar.classList.remove('bg-danger');
    progressBar.classList.add('bg-success');

    const interval = setInterval(() => {
      if (progress < 90) {
        progress += 10;
        progressBar.style.width = progress + "%";
        progressBar.textContent = progress + "%";
      }
    }, 100);

    try {
      const res = await fetch('/note', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ direction, index: noteIndex })
      });

      const data = await res.json();
      noteIndex = data.index;

      document.getElementById('verset').textContent = data.note.verset;
      document.getElementById('priere').textContent = data.note.pri√®re;
      document.getElementById('citation').textContent = data.note.citation;
      document.getElementById('note').textContent = data.note.note;

      clearInterval(interval);
      progressBar.style.width = "100%";
      progressBar.textContent = "100%";
    } catch (err) {
      clearInterval(interval);
      progressBar.classList.remove('bg-success');
      progressBar.classList.add('bg-danger');
      progressBar.textContent = "Erreur";
    }

    setTimeout(() => {
      progressBar.classList.remove('progress-bar-animated', 'bg-danger');
      progressBar.classList.add('bg-success');
      progressBar.style.width = "0%";
      progressBar.textContent = "0%";
    }, 600);
  }

  document.getElementById('nextBtn').addEventListener('click', () => updateNote('next'));
  document.getElementById('prevBtn').addEventListener('click', () => updateNote('prev'));
</script>

</body>
</html>